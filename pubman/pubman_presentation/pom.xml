	<scm>
		<connection>scm:svn:https://subversion.mpdl.mpg.de/repos/pubman/trunk/pubman/pubman_presentation</connection>
		<developerConnection>scm:svn:https://subversion.mpdl.mpg.de/repos/pubman/trunk/pubman/pubman_presentation</developerConnection>
		<url>https://subversion.mpdl.mpg.de/repos/pubman/</url>
	</scm>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.7</version>
				<configuration>
				<wtpversion>1.5</wtpversion>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${jdk.version}</source>
					<target>${jdk.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.6.1</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jxr-plugin</artifactId>
				<version>2.1</version>
			</plugin>
			<plugin>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-war-plugin</artifactId>
        		<configuration>
        			<warSourceExcludes>**/opensource/**</warSourceExcludes>
        		</configuration>
      		</plugin>
			<plugin>
				<groupId>org.zeroturnaround</groupId>
				<artifactId>javarebel-maven-plugin</artifactId>
				<version>1.0.5</version>
			</plugin>     
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.zeroturnaround
										</groupId>
										<artifactId>
											javarebel-maven-plugin
										</artifactId>
										<versionRange>
											[1.0.5,)
										</versionRange>
										<goals>
											<goal>generate</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore />
									</action>
								</pluginExecution>
								
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		
	</build>
	
	<profiles>
		<profile>
			<id>env-development</id>
			<properties />
			<build>
			<plugins>
			<plugin>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-war-plugin</artifactId>
        		<configuration>
        			<warSourceExcludes>${project.basedir}/src/main/resources/opensource</warSourceExcludes>
        			<warSourceExcludes>${project.basedir}/src/main/resources/nims</warSourceExcludes>
        			<webResources>
            			<resource>
            				<targetPath>WEB-INF/classes</targetPath>
              				<directory>${project.basedir}/src/main/resources/mpg</directory>             				
              				<includes>
                				<include>**/*.properties</include>
              				</includes>
            			</resource>
          			</webResources>
        		</configuration>
      		</plugin>
      		
      		
      		      		
      		<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>compile</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<delete file="${project.basedir}/src/main/webapp/home/StartPageLoggedIn.jspf" />
										<delete file="${project.basedir}/src/main/webapp/home/StartPageLoggedOut.jspf" />
										<copy file="${project.basedir}/src/main/webapp/home/mpg/StartPageLoggedIn.jspf" tofile="${project.basedir}/src/main/webapp/home/StartPageLoggedIn.jspf" />
										<copy file="${project.basedir}/src/main/webapp/home/mpg/StartPageLoggedOut.jspf" tofile="${project.basedir}/src/main/webapp/home/StartPageLoggedOut.jspf" />
										<!--  delete dir="${project.build.directory}/main/webapp/home/mpg"/-->
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
			</plugins>	
			</build>
		</profile>
		<profile>
			<id>env-production-opensource</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties />
			<build>
			<plugins>	
	      		<plugin>
			        <groupId>org.beardedgeeks</groupId>
			        <artifactId>maven-merge-properties-plugin</artifactId>
			        <version>0.2</version>
			        <configuration>
			          <merges>
			            <merge>
			              <targetFile>${project.build.outputDirectory}/Label_de.properties</targetFile>
			              <propertiesFiles>
			              	<propertiesFile>src/main/resources/opensource/Label_de.properties</propertiesFile>
			                <propertiesFile>src/main/resources/mpg/Label_de.properties</propertiesFile>
			              </propertiesFiles>
			            </merge>
			           <merge>
			              <targetFile>${project.build.outputDirectory}/Label_en.properties</targetFile>
			              <propertiesFiles>
			                <propertiesFile>src/main/resources/opensource/Label_en.properties</propertiesFile>
			                <propertiesFile>src/main/resources/mpg/Label_en.properties</propertiesFile>
			              </propertiesFiles>
			            </merge>
			            <merge>
			              <targetFile>${project.build.outputDirectory}/Label_es.properties</targetFile>
			              <propertiesFiles>
			               <propertiesFile>src/main/resources/opensource/Label_es.properties</propertiesFile>
			                <propertiesFile>src/main/resources/mpg/Label_es.properties</propertiesFile>
			              </propertiesFiles>
			            </merge>
			            <merge>
			              <targetFile>${project.build.outputDirectory}/Label_ja.properties</targetFile>
			              <propertiesFiles>
			                <propertiesFile>src/main/resources/opensource/Label_ja.properties</propertiesFile>
			                <propertiesFile>src/main/resources/mpg/Label_ja.properties</propertiesFile>
			              </propertiesFiles>
			            </merge>
			          </merges>
			        </configuration>
			        <executions>
			          <execution>
			            <phase>compile</phase>
			            <goals>
			              <goal>merge</goal>
			            </goals>
			          </execution>
			        </executions>
			      </plugin>
      		
				<plugin>
	        		<groupId>org.apache.maven.plugins</groupId>
	        		<artifactId>maven-war-plugin</artifactId>
	        		<configuration>
	        			<warSourceExcludes>${project.basedir}/src/main/resources/mpg</warSourceExcludes>
	        			<warSourceExcludes>${project.basedir}/src/main/resources/nims</warSourceExcludes>
	        			<warSourceExcludes>${project.basedir}/src/main/resources/opensource</warSourceExcludes>
	        		</configuration>
      			</plugin>         		
      		   		 		
      		<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>compile</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<delete file="${project.basedir}/src/main/webapp/home/StartPageLoggedIn.jspf" />
										<delete file="${project.basedir}/src/main/webapp/home/StartPageLoggedOut.jspf" />
										<copy file="${project.basedir}/src/main/webapp/home/opensource/StartPageLoggedIn.jspf" tofile="${project.basedir}/src/main/webapp/home/StartPageLoggedIn.jspf" />
										<copy file="${project.basedir}/src/main/webapp/home/opensource/StartPageLoggedOut.jspf" tofile="${project.basedir}/src/main/webapp/home/StartPageLoggedOut.jspf" />
										<!--  delete dir="${project.build.directory}/main/webapp/home/opensource"/-->
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
			</plugins>	
			</build>
		</profile>
		<profile>
			<id>env-production-nims</id>
			<properties />
			<build>
			<plugins>
			
			<plugin>
			        <groupId>org.beardedgeeks</groupId>
			        <artifactId>maven-merge-properties-plugin</artifactId>
			        <version>0.1.1</version>
			        <configuration>
			          <merges>
			            <merge>
			              <targetFile>${project.build.outputDirectory}/Label_de.properties</targetFile>
			              <propertiesFiles>
			              	<propertiesFile>src/main/resources/nims/Label_de.properties</propertiesFile>
			                <propertiesFile>src/main/resources/mpg/Label_de.properties</propertiesFile>
			              </propertiesFiles>
			            </merge>
			           <merge>
			              <targetFile>${project.build.outputDirectory}/Label_en.properties</targetFile>
			              <propertiesFiles>
			                <propertiesFile>src/main/resources/nims/Label_en.properties</propertiesFile>
			                <propertiesFile>src/main/resources/mpg/Label_en.properties</propertiesFile>
			              </propertiesFiles>
			            </merge>
			            <merge>
			              <targetFile>${project.build.outputDirectory}/Label_es.properties</targetFile>
			              <propertiesFiles>
			               <propertiesFile>src/main/resources/nims/Label_es.properties</propertiesFile>
			                <propertiesFile>src/main/resources/mpg/Label_es.properties</propertiesFile>
			              </propertiesFiles>
			            </merge>
			            <merge>
			              <targetFile>${project.build.outputDirectory}/Label_ja.properties</targetFile>
			              <propertiesFiles>
			                <propertiesFile>src/main/resources/nims/Label_ja.properties</propertiesFile>
			                <propertiesFile>src/main/resources/mpg/Label_ja.properties</propertiesFile>
			              </propertiesFiles>
			            </merge>
			          </merges>
			        </configuration>
			        <executions>
			          <execution>
			            <phase>compile</phase>
			            <goals>
			              <goal>merge</goal>
			            </goals>
			          </execution>
			        </executions>
			      </plugin>
			<plugin>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-war-plugin</artifactId>
        		<configuration>
        			<warSourceExcludes>${project.basedir}/src/main/resources/mpg</warSourceExcludes>
        			<warSourceExcludes>${project.basedir}/src/main/resources/opensource</warSourceExcludes>
        			<warSourceExcludes>${project.basedir}/src/main/resources/nims</warSourceExcludes>
        		</configuration>
      		</plugin>      		 		
      		<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>compile</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<delete file="${project.basedir}/src/main/webapp/home/StartPageLoggedIn.jspf" />
										<delete file="${project.basedir}/src/main/webapp/home/StartPageLoggedOut.jspf" />
										<copy file="${project.basedir}/src/main/webapp/home/opensource/StartPageLoggedIn.jspf" tofile="${project.basedir}/src/main/webapp/home/StartPageLoggedIn.jspf" />
										<copy file="${project.basedir}/src/main/webapp/home/opensource/StartPageLoggedOut.jspf" tofile="${project.basedir}/src/main/webapp/home/StartPageLoggedOut.jspf" />
										<!--  delete dir="${project.build.directory}/main/webapp/home/opensource"/-->
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
			</plugins>	
			</build>
		</profile>
	</profiles>
	
	<dependencies>
