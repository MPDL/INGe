<%@ taglib uri="http://java.sun.com/jsf/core" prefix="f" %>
<%@ taglib uri="http://java.sun.com/jsf/html" prefix="h" %>
<%@ taglib uri="http://myfaces.apache.org/trinidad" prefix="tr"%>

<%-- JIRA AS-583 --%>

<div class="full_area0 itemBlock">
	<h3 class="xLarge_area0_p8 endline blockHeader">
		<h:outputText value="#{lbl.ViewItemFull_lblSubHeaderLocalTags}" />
	</h3>
	<span class="seperator"></span>
	<div class="free_area0 itemBlockContent endline">

<%-- Tags --%>

		<tr:iterator var="localTag" value="#{EditItem.pubItem.wrappedLocalTags}">

			<h:panelGroup layout="block" styleClass="free_area0 endline itemLine noTopBorder">

				<b class="xLarge_area0_p8 endline labelLine clear">
					<h:outputText value="#{lbl.ViewItemFull_lblTagName}" /><span class="noDisplay"> </span>
				</b>
				<span class="xHuge_area0 xTiny_marginLExcl endline">
					<h:inputText styleClass="quad_txtInput" value="#{localTag.value}" valueChangeListener="#{EditItem.pubItem.writeBackLocalTags}"/>
					<h:outputText styleClass="quad_area0" value="#{localTag.value}"/>
				</span>
				<span class="large_area0_p8 lineToolSection">
					<tr:commandButton styleClass="min_imgBtn groupTool add" text=" " action="#{EditItem.addLocalTag}" rendered="#{localTag.isLast}"/>
					<tr:commandButton styleClass="min_imgBtn groupTool remove" text=" " action="#{localTag.removeLocalTag}" rendered="#{!localTag.isSingle}"/>
				</span>
			</h:panelGroup>
		</tr:iterator>
	</div>
</div>
