<jsp:directive.page pageEncoding="UTF-8" />
<!-- HOMEPAGE ENGLISH VERSION -->
	<h:panelGroup rendered="#{PubManSessionBean.locale =='en'}">
	<h2>
		WELCOME TO PUBMAN - <br/>WHAT DO YOU WANT TO WORK ON TODAY?
	</h2>
	<br/>
	</h:panelGroup>
	<h:panelGroup rendered="#{PubManSessionBean.locale =='en' && LoginHelper.isDepositor}">
	<span class="small_area0">
		<span class="big_imgArea startPageIcon submIcon">&#160;</span>
	</span>
	<span class="xDouble_area0"> 
	<h2>Submission</h2>      	
          <b>Enter a new Publication to PubMan?</b><br/>
	   ... by using the 
		<h:outputLink value="#{ApplicationBean.appContext}SubmissionPage.jsp">
			<h:outputText value="Easy Submission method"/>
		</h:outputLink>
		<br/>
	  ... by 
		<h:outputLink value="#{ApplicationBean.appContext}SubmissionPage.jsp">
			<h:outputText value="Data Import"/>
		</h:outputLink>
		<br/>
	  ... by using the 
		<h:outputLink value="#{ApplicationBean.appContext}SubmissionPage.jsp">
			<h:outputText value="Full Submission method"/>
		</h:outputLink>
    </span>
	</h:panelGroup>

	<h:panelGroup rendered="#{LoginHelper.isDepositor && PubManSessionBean.locale =='en'}">
	<span class="small_area0">
		<span class="big_imgArea startPageIcon myItemsIcon">&#160;</span>
	</span>
	<span class="xDouble_area0"> 
	<br/>
		<h2>My Items</h2>
		...finish your data 
		<h:outputLink value="#{ApplicationBean.appContext}DepositorWSPage.jsp">
			<h:outputText value="submissions or check "/>
		</h:outputLink>
		if your items have been already realeased to the public.
	</span>
	</h:panelGroup>

	<h:panelGroup rendered="#{(LoginHelper.isModerator || LoginHelper.isMdEditor) && PubManSessionBean.locale =='en'}">
	<span class="small_area0">
		<span class="big_imgArea startPageIcon qaWSIcon">&#160;</span>
	</span>
	<span class="xDouble_area0"> 
	<br/>
		<h2>QA Workspace</h2>
		... 		
		<h:outputLink value="#{ApplicationBean.appContext}QAWSPage.jsp">
			<h:outputText value="moderate or edit"/>
		</h:outputLink>
		items entered for your context.
	</span>
	</h:panelGroup>
	<h:panelGroup rendered="#{PubManSessionBean.locale =='en'}">
	<span class="full_area0 ">
	<br/>
		<h2>
			Help and further information
		</h2>
		<b>Helpful videos</b>
		<ul>
			<li>video on <a href=" http://pubman.blogs.mpdl.mpg.de/2009/06/04/new-videos-out-on-how-to-submit-publications-to-pubman/" target="_blank">how to submit data</a></li>
			<li>video on <a href="http://pubman.blogs.mpdl.mpg.de/2009/06/04/new-videos-out-on-pubman-user-workspaces/" target="_blank">usage of your workspaces</a></li>
		</ul>
	</span>
	</h:panelGroup>

<!-- HOMEPAGE GERMAN VERSION -->
	<h:panelGroup rendered="#{PubManSessionBean.locale =='de'}">
	<h2>
		WILLKOMMEN BEI PUBMAN - <br/>WAS M&Ouml;CHTEN SIE HEUTE TUN?
	</h2>
	<br/>
	</h:panelGroup>
	<h:panelGroup rendered="#{PubManSessionBean.locale =='de' && LoginHelper.isDepositor}">
	<span class="small_area0">
		<span class="big_imgArea startPageIcon submIcon">&#160;</span>
	</span>
	<span class="xDouble_area0"> 
	<h2>Dateneingabe</h2>      	
          <b>Wollen Sie eine neue Publikation eingeben?</b><br/>
	   ... benutzen Sie die 
		<h:commandLink title="#{tip.submission_lnkEasySubmission}" action="#{EasySubmission.newEasySubmission}">
			<h:outputText value="#{lbl.submission_lnkEasySubmission}" rendered="#{DepositorWSSessionBean.newSubmission and ContextListSessionBean.depositorContextListSize>0}"/>
		</h:commandLink>
		<br/>
	  ... den 
		<h:commandLink title="#{tip.submission_lnkImport}" action="#{EasySubmission.newImport}">
			<h:outputText value="Import" rendered="#{DepositorWSSessionBean.newSubmission and ContextListSessionBean.depositorContextListSize>0}"/>
		</h:commandLink>
		<br/>
	  ... oder die 
		<h:commandLink title="#{tip.submission_lnkNewSubmission}" action="#{CreateItem.newSubmission}" immediate="true">
			<h:outputText value="#{lbl.submission_lnkNewSubmission}" rendered="#{DepositorWSSessionBean.newSubmission and ContextListSessionBean.depositorContextListSize>0}" />
		</h:commandLink>
    </span>
	</h:panelGroup>
	<h:panelGroup rendered="#{LoginHelper.isDepositor && PubManSessionBean.locale =='de'}">
	<span class="small_area0">
		<span class="big_imgArea startPageIcon myItemsIcon">&#160;</span>
	</span>
	<span class="xDouble_area0"> 
	<br/>
		<h2>Meine Datens&auml;tze</h2>
		...beenden Sie Ihre 
		<h:outputLink value="#{ApplicationBean.appContext}DepositorWSPage.jsp">
			<h:outputText value="Dateneingabe oder prüfen "/>
		</h:outputLink>
		Sie ob Ihre Items bereits ver&ouml;ffentlicht wurden.
	</span>
	</h:panelGroup>

	<h:panelGroup rendered="#{LoginHelper.isModerator && PubManSessionBean.locale =='de'}">
	<span class="small_area0">
		<span class="big_imgArea startPageIcon qaWSIcon">&#160;</span>
	</span>
	<span class="xDouble_area0"> 
	<br/>
		<h2>QA Bereich</h2>
		... 		
		<h:outputLink value="#{ApplicationBean.appContext}QAWSPage.jsp">
			<h:outputText value="überprüfen oder editieren"/>
		</h:outputLink>
		Sie Items aus Ihrem Kontext.
	</span>
	</h:panelGroup>
	<h:panelGroup rendered="#{PubManSessionBean.locale =='de'}">
	<span class="full_area0 ">
	<br/>
		<h2>
			Hilfe und weitere Informationen:
		</h2>
		<b>N&uuml;tzliche Videos</b>
		<ul>
			<li>video on <a href=" http://pubman.blogs.mpdl.mpg.de/2009/06/04/new-videos-out-on-how-to-submit-publications-to-pubman/" target="_blank">wie gebe ich Daten ein</a></li>
			<li>video on <a href="http://pubman.blogs.mpdl.mpg.de/2009/06/04/new-videos-out-on-pubman-user-workspaces/" target="_blank">wie nutze ich meine Arbeitsbereiche</a></li>
		</ul>
	</span>
	</h:panelGroup>

<!-- HOMEPAGE JAPANESE VERSION -->
	<h:panelGroup rendered="#{PubManSessionBean.locale =='ja'}">
	<h2>
		PubManへようこそ <!-- -<br/>今日は何をしましょうか？ -->
	</h2>
	<br/>
	</h:panelGroup>
	<h:panelGroup rendered="#{PubManSessionBean.locale =='ja' && LoginHelper.isDepositor}">
