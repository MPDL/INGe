<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>common_services</artifactId>
		<groupId>de.mpg.escidoc.services</groupId>
		<version>1.0.11</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.mpg.escidoc.services</groupId>
	<artifactId>exportmanager</artifactId>
    <name>exportmanager</name>
	<packaging>ejb</packaging>
	<version>1.0.9</version>

	<scm>
		<connection>scm:svn:https://zim02.gwdg.de/repos/common/tags/common_services-1.0.11/exportmanager</connection>
		<developerConnection>scm:svn:https://zim02.gwdg.de/repos/common/tags/common_services-1.0.11/exportmanager</developerConnection>
		<url>https://zim02.gwdg.de/repos/common/tags/common_services-1.0.11</url>
	</scm>

	<build>
		<plugins>
		     <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ejb-plugin</artifactId>
        <configuration>
          <ejbVersion>3.0</ejbVersion>
        </configuration>
          </plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${jdk.version}</source>
					<target>${jdk.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<test>ExportTest</test>
				</configuration>
			</plugin>
		</plugins>
        <resources>
          <resource>
            <targetPath>resources</targetPath>
            <filtering>false</filtering>
            <directory>${basedir}/src/main/resources</directory>
          </resource>
        </resources>          
	</build>

	<dependencies> 
		<dependency> 
			<groupId>de.mpg.escidoc.services</groupId>
			<artifactId>citationmanager</artifactId>
			<version>1.0.15</version>
			<scope>compile</scope>
		</dependency>
		<dependency> 
			<groupId>de.mpg.escidoc.services</groupId>
			<artifactId>structuredexportmanager</artifactId>
			<version>1.0.12</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.ant</groupId>
			<artifactId>ant</artifactId>
			<version>1.7.0</version>
		</dependency>
		<dependency>
			<groupId>xalan</groupId>
			<artifactId>xalan</artifactId>
			<version>2.7.0</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
</project>