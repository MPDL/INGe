<!--
	APA default layout-elements, can be referenced in CitationStyle.xml
	1) 	If predefined-layout-elements@ref is defined, all the layout-elements will be taken from the
		layout-elements.xml of the referenced citation styles and appended with the layout elements of the current file.
	2) 	Variables are referenced in @ref attributes should be defined in the <Citation Style>/variables.xml 
		or in global variables.xml     
	See http://colab.mpdl.mpg.de/mediawiki/CitationStyleConfigurationConcept
	and https://zim02.gwdg.de/repos/common/trunk/common_services/citationmanager/src/main/resources/Schemas/citation-style.xsd
	Author: Vlad Makarenko (initial creation) $Author$ (last changed)
	$Revision$ $LastChangedDate$
-->
<predefined-layout-elements xmlns="http://www.escidoc.de/citationstyle">

	<layout-element name="ed-postfix-i18n">
		<elements>
			<layout-element ref="$ed-postfix" >
				<parameters>
					<valid-if><![CDATA[$editorsCount=1]]></valid-if>
					<i18n ref="editor"/>
				</parameters>
			</layout-element>
			<layout-element ref="$ed-postfix" >
				<parameters>
					<valid-if><![CDATA[$editorsCount>1]]></valid-if>
					<i18n ref="editors"/>
				</parameters>
			</layout-element>
		</elements>
	</layout-element>		

	<layout-element name="source-ed-postfix-i18n">
		<elements>
			<layout-element ref="$source-ed-postfix" >
				<parameters>
					<valid-if><![CDATA[$sourceEditorsCount=1]]></valid-if>
					<i18n ref="editor"/>
				</parameters>
			</layout-element>
			<layout-element ref="$source-ed-postfix" >
				<parameters>
					<valid-if><![CDATA[$sourceEditorsCount>1]]></valid-if>
					<i18n ref="editors"/>
				</parameters>
			</layout-element>
		</elements>
	</layout-element>		

	<layout-element name="year" ref="$date">
		<parameters>
			<font-style ref="DISPLAY_DATE_STATUS" />
			<starts-with value="(" />
			<ends-with value=")." />
		</parameters>
	</layout-element>

	<layout-element name="year-for-thesis" ref="$date-for-thesis">
		<parameters>
			<font-style ref="DISPLAY_DATE_STATUS" />
			<starts-with value="(" />
			<ends-with value=")." />
		</parameters>
	</layout-element>

	<layout-element name="year-with-event-start-date">
		<parameters>
			<font-style ref="DISPLAY_DATE_STATUS" />
			<starts-with value="(" />
			<ends-with value=")." />
		</parameters>
		<elements>
			<layout-element ref="$start-date-or-date"/>
		</elements>
	</layout-element>

	<layout-element name="published-online-and-external-locator" ref="$published-online-and-external-locator">
		<parameters>
			<starts-with value=" "/>
			<ends-with value="."/>
		</parameters>
	</layout-element>
	
		<layout-element name="year-authors-or-editors-are-presented" ref="$year">
			<parameters>
				<valid-if><![CDATA[$authorsCount>0 or $editorsCount>0]]></valid-if>
			</parameters>
		</layout-element>

		<layout-element name="year-authors-or-editors-are-not-presented" ref="$year">
			<parameters>
				<valid-if><![CDATA[$authorsCount=0 and $editorsCount=0]]></valid-if>
			</parameters>
		</layout-element>

		<layout-element name="year-and-month-name">
			<parameters>
				<font-style ref="DISPLAY_DATE_STATUS" />
				<starts-with value="(" />
				<ends-with value=")." />
			</parameters>
			<elements>
				<layout-element>
					<parameters>
						<valid-if><![CDATA[pub:publication/dcterms:issued]]></valid-if>
						<delimiter value=", " />
					</parameters>
					<elements>
						<layout-element ref="func:get_year(pub:publication/dcterms:issued/text())" />
						<layout-element ref="func:get_month_name(pub:publication/dcterms:issued/text())" />
					</elements>
				</layout-element>
				<layout-element ref="$date">
					<parameters>
						<valid-if><![CDATA[not(pub:publication/dcterms:issued)]]></valid-if>
					</parameters>
				</layout-element>
			</elements>
		</layout-element>

		<layout-element name="year-and-month-authors-are-presented" ref="$year-and-month-name">
			<parameters>
				<valid-if><![CDATA[$authorsCount>0]]></valid-if>
			</parameters>
		</layout-element>

		<layout-element name="year-and-month-authors-are-not-presented" ref="$year-and-month-name">
			<parameters>
				<valid-if><![CDATA[$authorsCount=0]]></valid-if>
			</parameters>
		</layout-element>


		<layout-element name="year-editors-are-presented" ref="$year">
			<parameters>
				<valid-if><![CDATA[$editorsCount>0]]></valid-if>
			</parameters>
		</layout-element>

		<layout-element name="year-editors-are-not-presented" ref="$year">
			<parameters>
				<valid-if><![CDATA[$editorsCount=0]]></valid-if>
			</parameters>
		</layout-element>


		<layout-element name="title-with-dot" ref="func:escapeMarkupTags(pub:publication/dc:title/text())">
			<parameters>
				<starts-with value=" " />
				<ends-with value="." />
			</parameters>
		</layout-element>

		<layout-element name="title-italic" ref="func:escapeMarkupTags(pub:publication/dc:title/text())">
			<parameters>
				<font-style ref="ITALIC" />
			</parameters>
		</layout-element>

		<layout-element name="title-with-dot-italic" ref="$title-italic">
			<parameters>
				<starts-with value=" " />
				<ends-with value="." />
			</parameters>
		</layout-element>
		
		<layout-element name="e-number">
			<elements>
				<layout-element name="e-number-only">
					<parameters>
						<valid-if><![CDATA[(pub:publication/source:source[1]/eterms:start-page=null or pub:publication/source:source[1]/eterms:start-page='') and (pub:publication/source:source[1]/eterms:sequence-number!=null or pub:publication/source:source[1]/eterms:sequence-number!='')]]></valid-if>
						<ends-with value=". " />
					</parameters>
					<elements>
						<layout-element ref="pub:publication/source:source[1]/eterms:sequence-number/text()" />
					</elements>
				</layout-element>
				<layout-element name="e-number-and-pages">
					<parameters>
						<valid-if><![CDATA[(pub:publication/source:source[1]/eterms:start-page!=null or pub:publication/source:source[1]/eterms:start-page!='') and (pub:publication/source:source[1]/eterms:sequence-number!=null or pub:publication/source:source[1]/eterms:sequence-number!='')]]></valid-if>
						<ends-with value=", " />
					</parameters>
					<elements>
						<layout-element ref="pub:publication/source:source[1]/eterms:sequence-number/text()" />
					</elements>
				</layout-element>
			</elements>
		</layout-element>

		<layout-element name="start-page-end-page">
			<elements>
				<layout-element name="start-page-end-page-without-pp">
					<parameters>
						<valid-if><![CDATA[pub:publication/source:source[1]/eterms:sequence-number=null or pub:publication/source:source[1]/eterms:sequence-number='']]></valid-if>
						<delimiter value="-" />
						<ends-with value=". "/>
					</parameters>
					<elements>
						<layout-element ref="pub:publication/source:source[1]/eterms:start-page/text()" />
						<layout-element ref="pub:publication/source:source[1]/eterms:end-page/text()" />
					</elements>
				</layout-element>
				<layout-element name="start-page-end-page-with-pp">
					<parameters>
						<valid-if><![CDATA[pub:publication/source:source[1]/eterms:sequence-number!=null or pub:publication/source:source[1]/eterms:sequence-number!='']]></valid-if>
						<starts-with value="pp. "></starts-with>
						<delimiter value="-" />
						<ends-with value=". "/>
					</parameters>
					<elements>
						<layout-element ref="pub:publication/source:source[1]/eterms:start-page/text()" />
						<layout-element ref="pub:publication/source:source[1]/eterms:end-page/text()" />
					</elements>
				</layout-element>
			</elements>
		</layout-element>
		
		<layout-element name="doi">
			<parameters>
				<valid-if><![CDATA[pub:publication/source:source[1]/dc:identifier/@xsi:type="eterms:DOI"]]></valid-if>
				<starts-with value="doi:"/>
			</parameters>
			<elements>
				<layout-element ref="pub:publication/source:source[1]/dc:identifier/text()" />
			</elements>
		</layout-element>
		
		<layout-element name="source-edition-start-page-end-page">
			<parameters>
				<starts-with value="(" />
				<ends-with value=")" />
				<delimiter value=", " />
			</parameters>
			<elements>
				<layout-element ref="pub:publication/source:source[1]/eterms:publishing-info/eterms:edition/text()"/>
				<layout-element ref="$start-page-end-page">
					<parameters>
						<starts-with value="pp. " />
					</parameters>
				</layout-element>
			</elements>
		</layout-element>


		<layout-element name="volume-issue">
			<elements>
				<layout-element>
					<parameters>
						<valid-if><![CDATA[pub:publication/source:source[1]/eterms:sequence-number!=null or pub:publication/source:source[1]/eterms:sequence-number!='']]></valid-if>
						<ends-with value=": "/>
						<delimiter value="" />
					</parameters>
					<elements>
						<layout-element ref="pub:publication/source:source[1]/eterms:volume/text()">
							<parameters>
								<font-style ref="ITALIC" />
							</parameters>
						</layout-element>
						<layout-element ref="pub:publication/source:source[1]/eterms:issue/text()">
							<parameters>
								<starts-with value="(" />
								<ends-with value=")" />
							</parameters>
						</layout-element>
					</elements>
				</layout-element>
				<layout-element>
					<parameters>
						<valid-if><![CDATA[(pub:publication/source:source[1]/eterms:sequence-number=null or pub:publication/source:source[1]/eterms:sequence-number='') and (pub:publication/source:source[1]/eterms:start-page!=null or pub:publication/source:source[1]/eterms:start-page!='') ]]></valid-if>
						<ends-with value=", "/>
						<delimiter value="" />
					</parameters>
					<elements>
						<layout-element ref="pub:publication/source:source[1]/eterms:volume/text()">
							<parameters>
								<font-style ref="ITALIC" />
							</parameters>
						</layout-element>
						<layout-element ref="pub:publication/source:source[1]/eterms:issue/text()">
							<parameters>
								<starts-with value="(" />
								<ends-with value=")" />
							</parameters>
						</layout-element>
					</elements>
				</layout-element>
				<layout-element>
					<parameters>
						<valid-if><![CDATA[(pub:publication/source:source[1]/eterms:sequence-number=null or pub:publication/source:source[1]/eterms:sequence-number='') and (pub:publication/source:source[1]/eterms:start-page=null or pub:publication/source:source[1]/eterms:start-page='') ]]></valid-if>
						<ends-with value=". "/>
						<delimiter value="" />
					</parameters>
					<elements>
						<layout-element ref="pub:publication/source:source[1]/eterms:volume/text()">
							<parameters>
								<font-style ref="ITALIC" />
							</parameters>
						</layout-element>
						<layout-element ref="pub:publication/source:source[1]/eterms:issue/text()">
							<parameters>
								<starts-with value="(" />
								<ends-with value=")" />
							</parameters>
						</layout-element>
					</elements>
				</layout-element>
			</elements>
		</layout-element>

		<layout-element name="source-title" ref="func:escapeMarkupTags(pub:publication/source:source[1]/dc:title/text())">
			<parameters>
				<font-style ref="ITALIC" />
				<starts-with value=" " />
				<ends-with value=","/>
			</parameters>
		</layout-element>

		<layout-element name="place-publisher">
			<parameters>
				<starts-with value=" " />
				<delimiter value=": " />
			</parameters>
			<elements>
				<layout-element ref="pub:publication/eterms:publishing-info/eterms:place/text()" />
				<layout-element ref="pub:publication/eterms:publishing-info/dc:publisher/text()" />
			</elements>
		</layout-element>	

		
</predefined-layout-elements>