								</goals>
							</execution>
						</executions>
						<configuration>
							<container>
								<containerId>wildfly8x</containerId>
								<zipUrlInstaller>
									<url>${cargo.jboss.url}</url>
									<downloadDir>${cargo.install.dir}</downloadDir>
									<extractDir>${cargo.install.dir}</extractDir>
