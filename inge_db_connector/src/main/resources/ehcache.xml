

<ehcache:config
        xmlns:ehcache="http://www.ehcache.org/v3"
        xmlns:jcache="http://www.ehcache.org/v3/jsr107">

    <ehcache:service>
        <jcache:defaults default-template="myDefaultTemplate"/>
    </ehcache:service>

    <ehcache:persistence directory="user.home/ehcache"/>


    <ehcache:cache-template name="myDefaultTemplate">
        <ehcache:expiry>
            <ehcache:tti>3600</ehcache:tti>
        </ehcache:expiry>
        <ehcache:resources>
            <ehcache:heap unit="entries">2000</ehcache:heap>
            <!--<ehcache:offheap unit="MB">0</ehcache:offheap>-->
        </ehcache:resources>


        <!--
           OPTIONAL
            Any further elements in another namespace
        -->
    </ehcache:cache-template>

</ehcache:config>

